{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES7"
    ],
    "strict": false,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "types": [
      "node",
      "jest"
    ]
  },
  "files": [
    "./typings/jest-extended.d.ts"
  ],
  "include": [
    "./src/**/*"
  ],
}